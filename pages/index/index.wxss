.header{
  width: 750rpx; 
  height: 70rpx;
}

.hdCon{ 
  display: flex; 
  align-items: center; 
  height: 100%;
}
.hdCon navigator{ 
  flex: 1; 
  margin: 0 20rpx; 
  text-align: center; 
  line-height: 60rpx; background-color: #f5f5f5;
  border-radius: 14rpx; 
  color: #666;
}
/*.hdCon .search{border: 1px solid #80ca35;}*/
.hdCon .kefu{ 
  height: 50rpx;
}
.hdCon image{
  height: 100%;
}
.kefu{ 
  position: relative;
  animation: dh linear 2s infinite alternate;
}
.kefu .btn{ 
  position: absolute;
  width: 100%; 
  height: 100%; 
  top: 0; 
  left: 0; 
  opacity: 0;
}

.banner{
  width: 100%; 
  height: 295rpx;
}
.banner swiper{ 
  width: 100%; 
  height: 100%;
}
.banner image{ 
  width: 100%; 
  height: 295rpx;
}

.pubTitle{
  display: flex; 
  justify-content: space-between;
  height: 60rpx;
}
.pubTitle .txt{ 
  font-size: 40rpx; 
  height: 100%; 
  position: relative; 
  padding-left: 20rpx;
}
.pubTitle .txt::before{ 
  display: block; 
  width: 8rpx; 
  height: 34rpx; 
  background: #80ca35; 
  content: ""; 
  position: absolute; 
  left: 0; 
  top: 50%; 
  margin-top: -15rpx;
}
.pubTitle .more{ 
  font-size: 34rpx; 
  color: #666;
}
.distribution{ 
  padding: 35rpx 0 30rpx;
}
.wkMain{ 
  display: flex; 
  flex-wrap: wrap; 
  justify-content: space-between; 
  padding: 20rpx 0; 
  background: #f7f5f6;
  border-radius: 30rpx; 
}
.wkMain .box{ 
  text-align: center; 
  padding: 0 25rpx; 
  margin-bottom: 10rpx;
}
.wkMain .pic{ 
  width: 95rpx; 
  height: 95rpx;
}
.wkMain .txt{ 
  font-size: 26rpx; 
  margin-top: -10rpx;
}

.footer {
  width: 100%; 
  height: 400rpx;
}
.footer .pic{ 
  width: 100%; 
  height: 100%; 
  margin-top: 20rpx;
}